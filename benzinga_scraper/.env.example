# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
SERVICE_NAME=benzinga-scraper
REGION=us-central1

# Benzinga Credentials
BENZINGA_EMAIL=your-email@example.com
BENZINGA_PASSWORD=your-password

# Scraping Configuration
RUN_MODE=continuous  # 'continuous' or 'single'
SCRAPE_INTERVAL=60000  # milliseconds (60000 = 1 minute)

# Optional: Webhook for sending news data
WEBHOOK_URL=https://your-api.com/webhook/news

# Optional: Cloud Storage bucket for data export
GCS_BUCKET=your-bucket-name

# Optional: Pub/Sub topic for news events
PUBSUB_TOPIC=projects/your-project/topics/benzinga-news
