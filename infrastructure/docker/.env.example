# GCP-Trader Docker Environment Variables
# Copy to .env and fill in your values

# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=gnw-trader
GCP_CREDENTIALS_PATH=~/.config/gcloud/application_default_credentials.json

# ============================================
# Polygon.io Configuration
# ============================================
POLYGON_API_KEY=your_polygon_api_key

# ============================================
# Alpaca Configuration
# ============================================
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_PAPER=true

# ============================================
# Benzinga Configuration
# ============================================
# WebSocket API
BENZINGA_API_KEY=your_benzinga_api_key

# Pro scraper credentials
BENZINGA_EMAIL=your_email@example.com
BENZINGA_PASSWORD=your_benzinga_password

# ============================================
# Pub/Sub Configuration
# ============================================
PUBSUB_TOPIC=benzinga-news
PUBSUB_SUBSCRIPTION=benzinga-news-trader
CHANNEL_FILTER=Press Releases

# ============================================
# Trading Parameters
# ============================================
EXIT_DELAY_MINUTES=7
VOLUME_PERCENTAGE=0.05
MAX_POSITION_USD=1000
MIN_NEWS_VOLUME=1000
MAX_NEWS_AGE_SECONDS=10
